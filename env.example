# Ozon API настройки
OZON_API_KEY=your_ozon_api_key_here
OZON_CLIENT_ID=your_ozon_client_id_here



# Настройки retry-логики для API
API_MAX_RETRIES=3
API_BASE_DELAY=2.0
API_MAX_DELAY=30.0
API_TIMEOUT=30

# Настройки кэширования
CACHE_ENABLED=true
CACHE_DIR=cache
CACHE_DB_PATH=cache/cache.db

# TTL для различных типов кэша (в часах)
CACHE_TTL_PRODUCTS=2.0
CACHE_TTL_SALES=1.0
CACHE_TTL_STOCKS=0.5
CACHE_TTL_ANALYTICS=1.0

# Настройки мониторинга API
API_MONITORING_ENABLED=true
API_MONITORING_INTERVAL=300
API_HEALTHY_THRESHOLD=200
API_DEGRADED_THRESHOLD=1000
API_MONITORING_DB_PATH=data/api_health.db

# Настройки метрик производительности API
API_METRICS_ENABLED=true
API_METRICS_DB_PATH=data/api_metrics.db
API_METRICS_RETENTION_DAYS=30
API_METRICS_RESPONSE_TIME_THRESHOLD=5000
API_METRICS_ERROR_RATE_THRESHOLD=5.0
API_METRICS_SUCCESS_RATE_THRESHOLD=95.0

# Google Sheets настройки (строго JSON, не путь)
# Пример: {"type":"service_account",...}
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your_project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"service-account@your_project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/service-account%40your_project.iam.gserviceaccount.com"}
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Telegram настройки
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Настройки прогнозирования
DAYS_FORECAST_SHORT=30
DAYS_FORECAST_LONG=45
SALES_HISTORY_DAYS=180

# Политики
# Если true, при отсутствии продаж из Ozon API будет использована оценка продаж из изменений остатков (StockTracker)
ALLOW_SALES_FALLBACK=false
# Если true, будет задействован удалённый ML (через ml_service)
ENABLE_ML=true

# Настройки логирования
LOG_LEVEL=INFO

# Настраиваемые пути ML-эндпоинтов (если отличаются в вашем сервисе)
ML_STATUS_PATH=/models/status
ML_PREDICT_PATH=/models/predict
ML_TRAIN_PATH=/models/train